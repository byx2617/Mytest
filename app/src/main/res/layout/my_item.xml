<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="174dp"
        android:layout_height="230dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViews"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:src="#9aed4c" />

        <TextView
            android:id="@+id/textView2s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circleImageViews"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="精选超市"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2s"
            android:layout_alignStart="@+id/textView2s"
            android:layout_below="@+id/textView2s"
            android:layout_marginTop="16dp"
            android:text="销量" />

        <TextView
            android:id="@+id/textView4s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3s"
            android:layout_alignBottom="@+id/textView3s"
            android:layout_alignEnd="@+id/textView2s"
            android:layout_alignRight="@+id/textView2s"
            android:text="1121" />

        <TextView
            android:id="@+id/textView5s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6s"
            android:layout_alignBottom="@+id/textView6s"
            android:layout_alignEnd="@+id/textView3s"
            android:layout_alignRight="@+id/textView3s"
            android:background="#f4257b"
            android:text="满20-8"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textView6s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4s"
            android:layout_alignStart="@+id/textView4s"
            android:layout_below="@+id/textView4s"
            android:layout_marginTop="12dp"
            android:background="#4698e4"
            android:text="免配送费"
            android:textColor="#FFF" />

    </RelativeLayout>


</LinearLayout>
